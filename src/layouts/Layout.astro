      }
      .footer-social a {
        margin: 0 0.5rem;
      }
      .footer-bottom {
        text-align: center;
        padding-bottom: 1rem;
      }
      
      /* SVG sizes */
      .svg-24 {
        width: 24px;
        height: 24px;
      }
      .svg-16 {
        width: 16px;
        height: 16px;
      }
      
      /* Responsive Navigation */
      @media (max-width: 768px) {
        .navbar {
          flex-direction: column;
          align-items: center;
        }
        .nav-links {
          flex-direction: column;
          align-items: center;
          margin-top: 1rem;
        }
        .nav-social {
          margin-top: 1rem;
        }
      }
