      /* Header Styles */
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        flex-wrap: wrap;
      }
      .nav-links {
        display: flex;
        gap: 1.5rem;
      }
