        font-size: 1.8rem;
        color: #fff;
      }
      
      /* Footer Styles */
      footer {
        background-color: #FFAD15;
        color: #fff;
        padding: 2rem 0;
        margin-top: 2rem;
      }
      .footer-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }
      .footer-column {
        flex: 1;
        min-width: 250px;
        padding: 1rem;
